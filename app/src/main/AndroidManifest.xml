<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.job4j.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:authorities="ru.job4j.todolist"
            android:name=".store.StoreContentProvider"/>
        <activity android:name=".fragments.AddActivity"/>
        <activity android:name=".fragments.EditActivity"/>
        <activity android:name=".fragments.SearchActivity"/>
        <activity android:name=".fragments.ItemsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".fragments.BaseActivity" />
    </application>

</manifest>